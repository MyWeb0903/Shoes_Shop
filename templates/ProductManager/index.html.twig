<section id="hero">
    <div class="container-fluid">
        <div class="container" style="min-height: 50vh">
             <div class="row heading">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Price</th>
                    <th scope="col">Image</th>
                    <th scope="col">Detail</th>
                    <th  style="width:160px;"><a style="color: #272727;" href="{{path ('addProduct')}}" >
                        <i class="glyphicon glyphicon-plus"></i> Add new product</a>
                    </th>
                </tr>
            </thead>
            <tbody>
                {% for p in product %}
                    <tr>
                        <td>{{p.id}}</td>
                        <td>{{p.Name}}</td>
                        <td>{{p.Quantity}}</td>
                        <td>{{p.Price}}</td>
                        <td>{{p.Image}}</td>
                        <td>{{p.Detail}}</td>
                        <td><a style="color: #272727; margin-left:30px;" href="{{path ('editProduct', {'id' : p.id})}}" class="glyphicon glyphicon-pencil"></a> 
                        <a style="color: #272727; margin-left:30px;" href="{{path ('deleteProduct', {'id' : p.id})}}" class="glyphicon glyphicon-remove"></a></td>    
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
        </div>
    </div>
</section>
