{% extends "base.html.twig" %}
{% block title %}{% endblock %}
{% block body %}
<style>
    .container-fluid{
        margin-top: 300px;
    }
</style>

<body>
<section id="hero">
    <div class="container-mb3" >
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>User name</th>
                    <th>Full name</th>
                    <th>Email</th>
                    <th>Gender</th>
                    <th>Birthday</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for pro in profile %}
                    <tr>
                        <td>{{pro.username}}</td>
                        <td>{{pro.Fullname}}</td>
                        <td>{{pro.Email}}</td>
                        <td>{{pro.Gender}}</td>
                        <td>{{pro.Birthday|date('y-m-d')}}</td>
                        <td>{{pro.Address}}</td>
                        <td><a href="{{path ('password')}}">Update Password</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>
</body>
{% endblock %}

